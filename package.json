{
  "name": "metalsmith-cli",
  "version": "0.0.1",
  "description": "CLI for Metalsmith â€” An extremely simple, pluggable static site generator.",
  "bin": {
    "metalsmith": "bin/metalsmith",
    "_metalsmith": "bin/_metalsmith"
  },
  "scripts": {
    "build": "npm run build:cli",
    "prebuild:cli": "node src/mkbin",
    "build:cli": "babel src/_metalsmith --out-file bin/_metalsmith",
    "postbuild:cli": "babel src/metalsmith --out-file bin/metalsmith",
    "lint": "eslint --cache --ignore-pattern node_modules --ignore-pattern bin '**/*.js' --ignore-pattern src/mkbin.js 'src/*'",
    "pretest": "npm run build",
    "test": "mocha --compilers js:babel-register $HARMONY_OPTS",
    "posttest_should_be_enabled_when_0.12_dropped": "npm run lint",
    "precoverage": "npm run build",
    "coverage": "node $HARMONY_OPTS ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha --compilers js:babel-register",
    "precoveralls": "npm run coverage",
    "coveralls": "coveralls < coverage/lcov.info",
    "prepublish": "npm test",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metalsmith/metalsmith-cli.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/metalsmith/metalsmith-cli/issues"
  },
  "devDependencies": {
    "assert-dir-equal": "^1.0.1",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-preset-env": "0.0.6",
    "coveralls": "^2.11.14",
    "eslint": "^3.9.0",
    "eslint-config-airbnb-base": "^9.0.0",
    "eslint-plugin-import": "^2.0.1",
    "istanbul": "^0.4.5",
    "metalsmith-drafts": "0.0.1",
    "metalsmith-markdown": "^0.2.1",
    "mkdirp": "^0.5.1",
    "mocha": "^3.1.2"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "has-generators": "^1.0.1",
    "metalsmith": "^2.3.0",
    "win-fork": "^1.1.1"
  },
  "homepage": "http://metalsmith.io",
  "keywords": [
    "static",
    "file",
    "site",
    "website",
    "blog",
    "generator",
    "markdown",
    "jekyll",
    "wintersmith",
    "blacksmith"
  ]
}
